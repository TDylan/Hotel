{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1>Order index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Room</th>
                <th>Beds</th>
                <th>Date</th>
                <th>Timeofarrival</th>
                <th>Timeofleaving</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.room }}</td>
                <td>{{ order.beds }}</td>
                <td>{{ order.date ? order.date|date('Y-m-d') : '' }}</td>
                <td>{{ order.timeofarrival ? order.timeofarrival|date('Y-m-d') : '' }}</td>
                <td>{{ order.timeofleaving ? order.timeofleaving|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_order_show', {'id': order.id}) }}">show</a>
                    <a href="{{ path('app_order_edit', {'id': order.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
