{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Room</th>
                <td>{{ order.room }}</td>
            </tr>
            <tr>
                <th>Beds</th>
                <td>{{ order.beds }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ order.date ? order.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Timeofarrival</th>
                <td>{{ order.timeofarrival ? order.timeofarrival|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Timeofleaving</th>
                <td>{{ order.timeofleaving ? order.timeofleaving|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_order_index') }}">back to list</a>

    <a href="{{ path('app_order_edit', {'id': order.id}) }}">edit</a>

    {{ include('order/_delete_form.html.twig') }}
{% endblock %}
